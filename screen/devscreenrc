startup_message off

bindkey "^[h" focus left
bindkey "^[j" focus down
bindkey "^[k" focus up
bindkey "^[l" focus right
bindkey "^[b" prev
bindkey "^[f" next
bindkey "^[[" resize -1
bindkey "^[]" resize +1
bindkey "^[q" quit

hardstatus alwayslastline "%{= KW}%H: %-Lw%{= bW}%n%f %t%{-}%+Lw %=%C%a %M %d, %Y"
screen -t claude claude
screen -t emacs emacs -nw
screen -t sub bash
screen -t terminal bash
split -v
resize 25%
select claude
focus
split
resize 70%
split -v
resize 45%
select emacs
focus
select sub
focus
select terminal
