startup_message off

bindkey "^[[1;5A" focus up
bindkey "^[[1;5B" focus down
bindkey "^[[1;5C" focus right
bindkey "^[[1;5D" focus left
bindkey "^[[5;5~" prev
bindkey "^[[6;5~" next

bindkey "^[h" focus left
bindkey "^[j" focus down
bindkey "^[k" focus up
bindkey "^[l" focus right
bindkey "^[b" prev
bindkey "^[f" next
bindkey "^[[" resize -1
bindkey "^[]" resize +1
bindkey "^[q" quit

hardstatus alwayslastline "%{= KW}%H: %-Lw%{= bW}%n%f %t%{-}%+Lw %=%C%a %M %d, %Y"
screen -t claude claude
screen -t emacs emacs -nw
screen -t sub bash
screen -t terminal bash
split -v
resize 25%
select claude
focus
split
resize 70%
split -v
resize 50%
select emacs
focus
select sub
focus
select terminal
